public class Part2Test {
	private static final String RAW_DATA = "part2.txt";
	@Test
	public void generateTest() throws Exception {
		Part2.generate();
	}

	@Test
	public void readTest() {
		try {
			writeTest();
		} catch (Exception e) {
			e.printStackTrace();
		}
	}

	@Test
	public void writeTest() throws Exception {
		String checkStr="5686 989965 55 65";
		Part2.write(checkStr,RAW_DATA);
		Part2.read(RAW_DATA);
		assertEquals(checkStr,Part2.checker);
	}

	@Test
	public void sortAndwriteTest() throws Exception {
		Part2.readenData= new ArrayList<>(Arrays.asList(5686, 989965, 55, 65, -999999));
		Part2.sortAndwrite();
		Part2.read("part2_sorted.txt");
		assertEquals("-999999 55 65 5686 989965",Part2.checker);
	}

