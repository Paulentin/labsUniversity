<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema"
            xmlns:tns="http://nure.ua/zabara/hotel"
            targetNamespace="http://nure.ua/zabara/hotel"
            elementFormDefault="qualified">


    <xsd:element name="hotel" type="tns:Hotel"/>
    <xsd:element name="room" type="tns:Room"/>


    <xsd:complexType name="Room">
        <xsd:sequence>
            <xsd:element name="rented" type="tns:WhoRentType" minOccurs="0" maxOccurs="unbounded"/>
            <xsd:element name="stars" type="xsd:int"/>
            <xsd:element name="staffAmount" type="xsd:int"/>
            <xsd:element name="barfridge" type="xsd:string"/>
            <xsd:element name="price" type="xsd:double"/>
        </xsd:sequence>
        <xsd:attribute name="id" type="xsd:int" use="required"/>
    </xsd:complexType>

    <xsd:complexType name="Hotel">

        <xsd:sequence>
            <xsd:element ref="tns:room" maxOccurs="unbounded"/>
        </xsd:sequence>
        <xsd:attribute name="name" type="xsd:string"/>
    </xsd:complexType>

    <xsd:complexType name="WhoRentType">
        <xsd:sequence>
            <xsd:element type="xsd:string" name="name"/>
            <xsd:element name="telNumber" maxOccurs="2">
                <xsd:simpleType>
                    <xsd:restriction base="xsd:string">
                        <xsd:pattern value="\+380[66,99,95,97,98,93,63,67,73][0-9]{8}"/>

                    </xsd:restriction>
                </xsd:simpleType>
            </xsd:element>

            <xsd:element name="dateStart" type="xsd:date"/>
            <xsd:element name="dateEnd" type="xsd:date"/>
        </xsd:sequence>
    </xsd:complexType>


</xsd:schema>
       